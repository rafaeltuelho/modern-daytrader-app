    {
      "clientId": "daytrader-web",
      "enabled": true,
      "publicClient": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": false,
      "redirectUris": [
        "http://localhost:3000/*",
        "https://daytrader.example.com/*"
      ],
      "webOrigins": [
        "http://localhost:3000",
        "https://daytrader.example.com"
      ]
